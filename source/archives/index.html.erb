<section>
  <h1>The Archives</h1>
  <% blog.articles.each do |article| %>
    <article>
      <h1><a href="<%= article.url %>"><%= article.title %></a></h1>
      <time><%= article.date.strftime('%b %e, %Y') %></time>

      <p class="teaser"><%= article.data.teaser %></p>
    </article>
  <% end %>
</section>